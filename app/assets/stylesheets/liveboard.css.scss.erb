/*
  Place all the styles related to the matching controller here.
  They will automatically be included in application.css.
*/

/* Liveboard */

#mainflarea {
    position: relative;
    width: 940px;
    vertical-align: top;
    padding-left:7px;
}
.fliers {
  display:inline-block;
  vertical-align: top;
  margin-top: 30px;
  margin-right: 7px;
  margin-left: 7px;
  width: 215px;
  height: 250px;
  border: 1px #cacaca solid;
  background-color: #fbfbfb
}
.flimg {
    height: 160px;
    width: 195px;
    margin-bottom: 5px;
    border: 1px solid #cacaca;
}
#topflarea {
    position: relative;
    width: 940px;
    vertical-align: top;
    margin-top: 15px;
    padding-top: 20px;
    padding-bottom: 30px;
    padding-left:10px;
    border-bottom: 1px #cacaca solid;
    border-top: 1px #cacaca solid;
}
.toptext {
    font-size: 1.0em;
    color: #b6b5b5;
    top: -11px;
    left: 0px;
    position: absolute;
    width: 75px;
    background-color: #fff;
}
.bottext {
    font-size: 1.0em;
    color: #b6b5b5;
    bottom: -8px;
    left: 0px;
    position: absolute;
    width: 100px;
    background-color: #fff;
}
.topfliers {
    display: inline-block;
    margin-right: 7px;
    margin-left: 7px;
    width: 291px;
    height: 338px;
    border: 1px #cacaca solid;
    background-color: #fbfbfb
}
.topflimg {
    height: 248px;
    width: 271px;
    margin-bottom: 5px;
    border: 1px solid #cacaca;
}
.shadow {
    -moz-box-shadow: 1px 1px 3px #cacaca;
    -webkit-box-shadow: 1px 1px 3px #cacaca;
    box-shadow: 1px 1px 3px #cacaca;
}

.flierdata {
    margin: 10px;
}
.fltit {
    color: #5195f9;
    line-height: 1.5em;
    font-size: 1.3em;
}

.fltit:hover {
    color: #000;
}

.fladd {
    position: relative;
    float: right;
}
.fladd:hover {
    background: url(<%=asset_path "addarrow.png"%>) no-repeat;
}
