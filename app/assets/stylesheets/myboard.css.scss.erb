.fliers {
  display:inline-block;
  vertical-align: top;
  margin-top: 30px;
  margin-right: 7px;
  margin-left: 7px;
  width: 215px;
  height: 250px;
  border: 1px #cacaca solid;
  background-color: #fbfbfb
}
.flimg {
    height: 160px;
    width: 195px;
    margin-bottom: 5px;
    border: 1px solid #cacaca;
}
.shadow {
    -moz-box-shadow: 1px 1px 3px #cacaca;
    -webkit-box-shadow: 1px 1px 3px #cacaca;
    box-shadow: 1px 1px 3px #cacaca;
}
.fltit {
    color: #5195f9;
    line-height: 1.5em;
    font-size: 1.3em;
}
.flierdata {
    margin: 10px;
}

.btnlist {
    position: absolute;
    margin-left: 0px;
    margin-top: 5px;
    float: left;
    list-style-type: none;
}
.btnlist li {
    display: inline-block;
    margin-right: 7px;
}
.del{
    font-size: 1.7em;
    font-style: bold;
}