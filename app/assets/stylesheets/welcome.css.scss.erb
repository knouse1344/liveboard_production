@import "bootstrap";
@charset "utf-8";
/* CSS Document */

html {
  overflow-y: scroll;
}

body {
  padding-top: 60px;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
}

.center h1 {
  margin-bottom: 10px;
}

/* typography */

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
}

h1 {
  text-align:left;
  font-size: 2em;
  letter-spacing: -2px;
  line-height:1.4em;
}

h2 {
  font-size: 1.7em;
  letter-spacing: -1px;
  margin-bottom: 0px;

  font-weight: normal;
  color: #999;
}

h3 {
    color: #000;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}
.desc {
    position: absolute;
    bottom: 10px;
    line-height: 1.2em;
    font-size: 1.5em;
    color: #999;
}

/* Login items */

.logintit {
   margin-left: 75px;
   font-size: 1.7em;
   color: #000;
   margin-bottom: 30px;
}
#loginitems {
   display: inline-block;
   width: 252px;
   margin-left: 75px;
}
#loginextra {
   position: absolute;
   display: inline-block;
   width: 500px;
   height: 287px;
   margin-left: 10px;
   padding: 10px;
   border: 1px #ecebeb solid;
   border-radius: 3px;
   background-color: #f7f6f6;
}
.fbdesc {
   font-size: 1.5em;
   line-height: 1.2em;
   margin-bottom: 10px;
   color: #999;
}
.signin {
  display: inline-block;
  position: relative;
  width: 240px;
  height: 90px;
  background-color: #f7f6f6;
  border: 1px #ecebeb solid;
  border-radius: 3px;
  padding-left: 10px;
  padding-top: 5px;
}
.orgsignin {
  display: inline-block;
  width: 240px;
  height: 190px;
  background-color: #f7f6f6;
  border: 1px #ecebeb solid;
  border-radius: 3px;
  margin-top: 10px;
  padding-left: 10px;
  padding-top: 10px;
}
.orgform {
  position: absolute;
  top:10px;
}
.flierlogo {
   display: inline-block;
   width: 500px;
   height: 200px;
   z-index:100;
}
.logindesc {
  display: inline-block;
  width: 488px;
  height: 75px;
  border-radius: 3px;
  margin-top: 17px;
}
.fbbtn {
    display: block;
	width: 220px;
	height: 44px;
    margin-top: 10px;
	background: url(<%=asset_path "fb_login.png"%>) bottom;
	text-indent: -99999px;
}
.fbbtn:hover {
	background-position: 0 0;
}
.tit {
   font-size: 1.4em;
   color: #999;
}

